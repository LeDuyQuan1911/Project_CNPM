<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>User Dashboard</title>

  <!-- Bootstrap 5 CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

  <style>
    body {
      background-color: #f8f9fa;
    }
    .navbar-brand {
      font-weight: bold;
    }
    .table-wrapper {
      margin-top: 2rem;
    }
    .action-buttons {
      margin-top: 1rem;
      margin-bottom: 1rem;
      text-align: right;
    }
  </style>
</head>

<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-success">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">User Dashboard</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link active" href="/user">Trang chủ</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/createTeam">Tạo đội bóng</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Đăng xuất</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container table-wrapper">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2>Đội bóng của bạn</h2>
      <a href="/createTeam" class="btn btn-primary">+ Tạo đội mới</a>
    </div>

    <div class="table-responsive">
      <table class="table table-bordered table-hover">
        <thead class="table-success">
          <tr>
            <th>STT</th>
            <th>Tên đội</th>
            <th>Huấn luyện viên</th>
            <th>Ngày tạo</th>
            <th>Hành động</th>
          </tr>
        </thead>
        <tbody>
          <% if (teams && teams.length > 0) { %>
            <% teams.forEach((team, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= team.name %></td>
                <td><%= team.coach %></td>
                <td><%= team.createdAt.toLocaleDateString() %></td>
                <td>
                  <a href="/team/<%= team.id %>" class="btn btn-sm btn-outline-info">Xem</a>
                  <a href="/team/<%= team.id %>/edit" class="btn btn-sm btn-outline-warning">Sửa</a>
                </td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="5" class="text-center">Bạn chưa có đội nào.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
